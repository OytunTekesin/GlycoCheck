<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Yumuşak Kenarlı Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Border rengi -->
            <corners android:radius="8dp"/> <!-- Kenarların yarıçapı -->
        </shape>
    </item>
    <!-- Background with Shadow -->
    <item
        android:right="2dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#72FF5722"/> <!-- Arkaplan rengi (80 = %50 saydamlık) -->
            <corners android:radius="8dp"/> <!-- Kenarların yarıçapı -->
        </shape>
    </item>
</layer-list>
