<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Oval Border -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FF0000"/> <!-- Oval Border rengi -->
        </shape>
    </item>
    <!-- Background with Shadow -->
    <item
        android:right="4dp"
        android:left="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape
            android:shape="oval">
            <solid android:color="#80FF0000"/> <!-- Arkaplan rengi (80 = %50 saydamlık) -->
            <corners android:radius="4dp"/> <!-- Oval kenarların yarıçapı -->
        </shape>
    </item>
</layer-list>
